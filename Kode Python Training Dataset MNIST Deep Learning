# Install library (run di command line, bukan di Python)
# pip install tensorflow numpy matplotlib

import numpy as np
import matplotlib.pyplot as plt
from tensorflow.keras.datasets import mnist
from tensorflow.keras.utils import to_categorical
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Conv2D, MaxPooling2D, Flatten, Dense, Dropout
# Memuat data MNIST
(x_train, y_train), (x_test, y_test) = mnist.load_data()

# Normalisasi data (ubah range 0-255 ke 0-1)
x_train = x_train.astype('float32') / 255.0
x_test = x_test.astype('float32') / 255.0

# Ubah bentuk dari (N, 28, 28) menjadi (N, 28, 28, 1)
x_train = np.expand_dims(x_train, -1)
x_test = np.expand_dims(x_test, -1)

# Konversi label ke one-hot encoding
y_train = to_categorical(y_train, 10)
y_test = to_categorical(y_test, 10)
model = Sequential([
    Conv2D(32, kernel_size=(3, 3), activation='relu', input_shape=(28, 28, 1)),
    MaxPooling2D(pool_size=(2, 2)),
    Conv2D(64, kernel_size=(3, 3), activation='relu'),
    MaxPooling2D(pool_size=(2, 2)),
    Flatten(),
    Dropout(0.5),
    Dense(10, activation='softmax')
])
model.summary()
model.compile(optimizer='adam',
              loss='categorical_crossentropy',
              metrics=['accuracy'])
batch_size = 128
epochs = 10

history = model.fit(
    x_train, y_train,
    batch_size=batch_size,
    epochs=epochs,
    validation_split=0.1,  # 10% data untuk validasi
    verbose=1
)
test_loss, test_acc = model.evaluate(x_test, y_test, verbose=0)
print(f"Akurasi data test: {test_acc:.4f}")
# Prediksi pada data test
predictions = model.predict(x_test)

# Visualisasi 5 sampel acak
num_samples = 5
random_idx = np.random.choice(x_test.shape[0], num_samples, replace=False)

plt.figure(figsize=(12,5))
for i, idx in enumerate(random_idx):
    plt.subplot(1, num_samples, i+1)
    plt.imshow(x_test[idx].reshape(28,28), cmap='gray')
    plt.title(f"Asli: {np.argmax(y_test[idx])}\nPrediksi: {np.argmax(predictions[idx])}")
    plt.axis('off')
plt.show()
